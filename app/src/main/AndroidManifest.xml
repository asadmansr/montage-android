<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.asadmansoor.montage">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true">
        <activity
                android:name=".ui.Dashboard.SplashActivity"
                android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.Dashboard.DashboardActivity"
                  android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".ui.UserDetail.UserDetailActivity"
                  android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".ui.UserGeneration.GenerateUserActivity"
                  android:theme="@style/NoActionBarTheme">
        </activity>
        <activity android:name=".ui.UserContactActivity"
                  android:theme="@style/NoActionBarTheme">
        </activity>
        <activity android:name=".ui.UserGeneration.UserInformationActivity"
                  android:windowSoftInputMode="adjustPan"
                  android:theme="@style/NoActionBarTheme">
        </activity>
        <activity android:name=".ui.UserStoryActivity"
                  android:theme="@style/NoActionBarTheme">
        </activity>
    </application>

</manifest>