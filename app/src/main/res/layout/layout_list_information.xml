<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_below="@id/btn_generate_img">

        <TextView
                android:id="@+id/tv_generate_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/label_name"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>

        <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lines="1"
                android:inputType="textPersonName"
                android:layout_toRightOf="@id/tv_generate_name"
                android:layout_toEndOf="@id/tv_generate_name"
                android:layout_toLeftOf="@id/btn_generate_name"
                android:layout_toStartOf="@id/btn_generate_name"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"/>

        <Button
                android:id="@+id/btn_generate_name"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/baseline_refresh_white_24"/>
    </RelativeLayout>
</RelativeLayout>
