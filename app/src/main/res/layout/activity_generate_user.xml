<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.Dashboard.SplashActivity">

    <RelativeLayout
            android:id="@+id/picture_rl"
            android:layout_width="228dp"
            android:layout_height="228dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:background="@drawable/picture_border_circle">

        <ImageView
                android:id="@+id/iv_user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <ImageButton
            android:id="@+id/btn_generate_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/picture_rl"
            android:layout_marginTop="22dp"
            android:src="@drawable/baseline_refresh_white_24"
            android:padding="16dp"
            android:background="@drawable/refresh_radius"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="24dp"
            android:id="@+id/rl_generate_name"
            android:layout_below="@id/btn_generate_img">

        <TextView
                android:id="@+id/tv_generate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/label_name"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>

        <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lines="1"
                android:inputType="textPersonName"
                android:layout_toRightOf="@id/tv_generate_name"
                android:layout_toEndOf="@id/tv_generate_name"
                android:layout_toLeftOf="@id/btn_generate_name"
                android:layout_toStartOf="@id/btn_generate_name"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"/>

        <Button
                android:id="@+id/btn_generate_name"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/baseline_refresh_white_24"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/rl_generate_name">

        <TextView
                android:id="@+id/tv_generate_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/label_email"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>

        <EditText
                android:id="@+id/et_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lines="1"
                android:inputType="textPersonName"
                android:layout_toRightOf="@id/tv_generate_email"
                android:layout_toEndOf="@id/tv_generate_email"

                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"/>
    </RelativeLayout>

    <Button
            android:id="@+id/btn_generate_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/btn_next"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:textColor="@color/colorWhite"/>

    <Button
            android:id="@+id/btn_generate_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/btn_close"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:textColor="@color/colorWhite"/>
</RelativeLayout>